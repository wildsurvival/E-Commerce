<% provide(:title, 'Sign up') %>
<div class="row">
    <div class="col-sm-12 col-md-6 mx-md-auto">
        <center><h1>Sign Up</h1></center>
        <%= form_for @account, :html => {:class => "rounded border border-primary" } do |f| %>
            <% if @account.errors.any? %>
                <div class="alert alert-danger">There were problems with your submission</div>
                <ul style="font-size: 0.8rem;">
                    <% @account.errors.full_messages.each do |message| %>
                      <li class="text-danger"><%= message %></li>
                    <% end %>
                </ul>
                <br>
            <% end %>
        
            <div class="form-row">
                <div class="form-group col-md-6">
                    <%= f.text_field :first_name, :placeholder => :first_name, :class => 'form-control', :required =>'' %>
                </div>
                <div class="form-group col-md-6">
                    <%= f.text_field :last_name, :placeholder => :last_name, :class => 'form-control', :required =>'' %>
                </div>
            </div>
            
            <div class="form-group">
                <%= f.email_field :email, :placeholder => :email, :class => 'form-control', :required =>'' %>
            </div>
            
            <div class="form-group">
                <%= f.phone_field :phone, :placeholder => :phone, :class => 'form-control bfh-phone', :required =>'' %>
            </div>
            
            <div class="form-group">
                <%= f.date_field :birthdate, :placeholder => :birthdate, :class => 'form-control', :required =>'' %>
            </div>
            
            <br>
            
            <div class="form-row">
                <div class="form-group col-md-6">
                    <%= f.password_field :password, :placeholder => :password, :class => 'form-control', :required =>'' %>
                </div>
                <div class="form-group col-md-6">
                    <%= f.password_field :password_confirmation, :placeholder => "Confirm password", :class => 'form-control', :required =>'' %>
                </div>
                <small id="passwordHelpBlock" class="form-text text-muted">
                 Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                </small>
            </div>
            
            <br>
            <%= f.submit "Create my account", class: "btn btn-primary btn-block" %>
            
            <br>
            <small id="loginBlock" class="form-text text-muted">Already have an account? <%= link_to "Log in", login_path %></small>
        <% end %>
    </div>
</div>