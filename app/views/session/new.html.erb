<% provide(:title, 'Log In') %>
<div class="row">
    <div class="col-sm-12 col-md-6 mx-md-auto">
        <center><h1>Sign Up</h1></center>
        
        <%= form_for:session, url: login_path, :html => {:class => "rounded border border-primary" } do |f| %>
    
            <div class="form-group">
                <%= f.email_field :email, :placeholder => :email, :class => 'form-control', :required =>'' %>
            </div>
            
            <div class="form-group">
                <%= f.password_field :password, :placeholder => :password, :class => 'form-control', :required =>'' %>
            </div>
            
            <div class="form-check">
                <label class="form-check-label">
                    <%= f.label :remember_me, class: "form-check-input" do %>
                        <%= f.check_box :remember_me %>
                        Remember me
                    <% end %>
                </label>
            </div>
            
            <br>
            <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
            
            <br>
            <small id="registerBlock" class="form-text text-muted">New user? <%= link_to "Register now", register_path %></small>
        <% end %>
        
    </div>
</div>